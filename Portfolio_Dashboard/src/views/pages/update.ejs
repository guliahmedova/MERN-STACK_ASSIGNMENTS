<%- include(rootPath + '/views/layout/dashboardHeader.ejs' ) %>

    <div class="container mt-5">
        <a href="http://localhost:4545/dashboard" class="btn btn-primary mb-5 mt-5">Go Back</a>
        <form method="post" action="/dashboard/updateCard/<%= datas.id %>">
            <div class="mb-3">
                <label for="cardTitle" class="form-label">Card Title</label>
                <input type="text" name="title" class="form-control" id="cardTitle" value="<%= datas?.title %>">
            </div>
            <div class="mb-3">
                <label for="cardDesc" class="form-label">Description</label>
                <input type="text" name="desc" class="form-control" id="cardDesc" value="<%= datas.desc %>">
            </div>
            <div class="mb-3">
                <label for="icon" class="form-label">Icon</label>
                <input type="text" name="icon" class="form-control" id="icon" value="<%= datas.icon %>">
            </div>
            <button type="submit" class="btn btn-primary mt-5">Submit</button>
        </form>
    </div>

    <%- include(rootPath + '/views/layout/dashboardFooter.ejs' ) %>