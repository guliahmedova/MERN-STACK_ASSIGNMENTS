<%- include('../partials/header') %>

    <div class="container mx-auto">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="row mx-0 mt-2">
                            <div class="col-3">
                                <a href="/dashboard/add" class="btn btn-primary btn-block">Add</a>
                            </div>
                            <div class="col-3 offset-6">
                                <input type="text" placeholder="Search..." class="form-control">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Blog List</h2>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mx-0 mt-3">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover">
                                        <thead class="table-primary">
                                            <tr>
                                                <th>Title</th>
                                                <th>SubTitle</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {<% data.forEach(blog=> { %>
                                                <tr>
                                                    <td>
                                                        <%= blog.title %>
                                                    </td>
                                                    <td>
                                                        <%= blog.subtitle %>
                                                    </td>
                                                    <td>
                                                        <a href="/dashboard/edit/<%= blog.id %>"
                                                            class="btn btn-warning">Edit</a>
                                                        <form method="post" action="/dashboard/delete/<%= blog.id %>"
                                                            onsubmit="return confirm('Are you sure you want to delete this country?')">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>